<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beauBlue"
    tools:context=".ui.main.MainActivity">

    <ImageView
        android:id="@+id/ivSun"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="-80dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/sun"
        android:contentDescription="@string/sun"
        android:alpha="1" />

    <ImageView
        android:id="@+id/ivCloud1"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintDimensionRatio="H,3:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/cloud_1"
        android:contentDescription="@string/cloud_1"
        android:alpha="1" />

    <ImageView
        android:id="@+id/ivCloud2"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintDimensionRatio="H,3:1"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/cloud_2"
        android:contentDescription="@string/cloud_2"
        android:alpha="0.75" />

    <ImageView
        android:id="@+id/ivCloud3"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintDimensionRatio="H,3:1"
        app:layout_constraintTop_toBottomOf="@id/ivCloud2"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/cloud_3"
        android:contentDescription="@string/cloud_3"
        android:alpha="0.5" />

    <ImageView
        android:id="@+id/ivCloud4"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintDimensionRatio="H,3:1"
        app:layout_constraintTop_toBottomOf="@id/ivCloud3"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/cloud_4"
        android:contentDescription="@string/cloud_4"
        android:alpha="0.25" />

    <ImageView
        android:id="@+id/ivGround"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ground"
        android:contentDescription="@string/ground"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:alpha="1" />

    <ImageView
        android:id="@+id/ivWood"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginBottom="-30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/wood_vertical"
        android:contentDescription="@string/wood_vertical"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:alpha="1" />

    <ImageView
        android:id="@+id/ivBelajar"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintDimensionRatio="H,3:1"
        app:layout_constraintTop_toTopOf="@id/ivWood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/wood_1"
        android:contentDescription="@string/belajar"
        android:alpha="1" />

    <ImageView
        android:id="@+id/ivBermain"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintDimensionRatio="H,3:1"
        app:layout_constraintTop_toBottomOf="@id/ivBelajar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/wood_2"
        android:contentDescription="@string/bermain"
        android:alpha="1" />

    <ImageView
        android:id="@+id/ivTentang"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintDimensionRatio="H,3:1"
        app:layout_constraintTop_toBottomOf="@id/ivBermain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/wood_3"
        android:contentDescription="@string/tentang"
        android:alpha="1" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivCloud1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/josefin_sans_regular"
        android:text="@string/welcome" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_wudhu_yuk"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/russet"
        android:textAlignment="center"
        android:fontFamily="@font/pacifico_regular"
        android:text="@string/app_name" />

</androidx.constraintlayout.widget.ConstraintLayout>